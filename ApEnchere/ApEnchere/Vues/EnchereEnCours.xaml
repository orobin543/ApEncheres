             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApEnchere.Vues.EnchereEnCours">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">

            <Grid>
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#9D3E0C" Offset="0"/>
                            <GradientStop Color="Wheat" Offset="1"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>
                <StackLayout HorizontalOptions="Center" Margin="20,100,20,0">
                    <Image Source="{Binding LaEnchere.LeProduit.Photo}"/>
                    <Label Text="{Binding LaEnchere.LeTypeEnchere}"/>
                    <Label Text="{Binding LaEnchere.PrixReserve}"/>
                </StackLayout>
