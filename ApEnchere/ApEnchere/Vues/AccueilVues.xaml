<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApEnchere.Vues.AccueilVues">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <BoxView Grid.RowSpan="3">
                    <BoxView.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="Purple" Offset="0"/>
                            <GradientStop Color="Pink" Offset="1"/>
                            <GradientStop Color="Wheat" Offset="2"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>


                <StackLayout Grid.Row="1" HorizontalOptions="Center" Margin="40,40,40,0" Spacing="50">
                    <!--Spacing espace entre 2 -->
                    <Button  x:Name="Classique"
                        Text="Classique"
                        Clicked="Classique_Clicked"
                        BackgroundColor="PeachPuff"
                        TextColor="SaddleBrown"
                        CornerRadius="15"
                        WidthRequest="150"
                        HeightRequest="46"/>
                    
                    <Button  x:Name="Inversees"
                        Text="Inversees"
                        Clicked="Inversees_Clicked"
                        BackgroundColor="PeachPuff"
                        TextColor="SaddleBrown"
                        CornerRadius="15"
                        WidthRequest="150"
                        HeightRequest="46"/>
                    
                    <Button  x:Name="Flash"
                        Text="Flash"
                        Clicked="Flash_Clicked"
                        BackgroundColor="PeachPuff"
                        TextColor="SaddleBrown"
                        CornerRadius="15"
                        WidthRequest="150"
                        HeightRequest="46"/>
                    
                    <Button Text="Continuer sans se connecter" 
                        BackgroundColor="Green"
                        TextColor="White"
                        WidthRequest="150"
                        HeightRequest="46"
                        CornerRadius="23"
                        Command="{Binding CommandBoutonContinuer}"/>
                </StackLayout>

                <Button Text="Inscription" Clicked="Inscription_Clicked" BackgroundColor="PeachPuff" TextColor="SaddleBrown" CornerRadius="15" VerticalOptions="Center"></Button>
            <Button Text="Test" Clicked="Test_Clicked" BackgroundColor="PeachPuff" TextColor="SaddleBrown" CornerRadius="15" VerticalOptions="End" ></Button>
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>