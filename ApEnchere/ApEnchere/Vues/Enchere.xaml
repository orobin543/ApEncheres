<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApEnchere.Vues.Enchere">
    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">

            <Grid>
                <BoxView>
                    <BoxView.Background>
                        <LinearGradientBrush>
                            <GradientStop Color="#581845" Offset="0"/>
                            <GradientStop Color="#FF5733" Offset="1"/>
                        </LinearGradientBrush>
                    </BoxView.Background>
                </BoxView>

                <StackLayout HorizontalOptions="Center" Margin="20,100,20,0">
                    <Image Source="{Binding LaEnchere.LeProduit.Photo}"/>
                    <Label Text="{Binding LaEnchere.LeTypeEnchere}"/>
                    <Label Text="{Binding LaEnchere.PrixReserve}"/>
                    <Label Text="{Binding LaEnchere.DateDebut}"/>
                </StackLayout>

            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>