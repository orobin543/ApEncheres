<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApEnchere.Vues.Page1">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Grid>
                    <BoxView>
                        <BoxView.Background>
                            <LinearGradientBrush>
                            <GradientStop Color="#581845" Offset="0"/>
                            <GradientStop Color="#FF5733" Offset="1"/>
                        </LinearGradientBrush>
                        </BoxView.Background>
                    </BoxView>


                <Frame BackgroundColor="#FFC300" CornerRadius="30" Margin="40, 100, 40, 170">
                
                <StackLayout HorizontalOptions="Center" Spacing="50">
                            <!--Spacing espace entre 2 -->

                        <Label Text="Inscription pour l'enchère" HorizontalOptions="CenterAndExpand" TextColor="#881E40" FontSize="Title" FontAttributes="Bold"/>
                            <Image x:Name="image"/>

                        <Button 
                            x:Name="Connexion"
                            Text="Connexion"
                            BackgroundColor="LightYellow"
                            TextColor="#FF5733"
                            WidthRequest="275"
                            CornerRadius="30"
                            Clicked="Connexion_Clicked"/>

                        <Button 
                            x:Name="Inscription"
                            Text="Inscription"
                            BackgroundColor="LightYellow"
                            TextColor="#FF5733"
                            WidthRequest="275"
                            CornerRadius="30"
                            Clicked="Inscription_Clicked"/>

                        <Button 
                            x:Name="SansConnexion"
                            Text="Connexion sans identifiant"
                            BackgroundColor="LightYellow"
                            TextColor="#FF5733"
                            WidthRequest="275"
                            CornerRadius="30"
                            Clicked="SansConnexion_Clicked"/>

                    </StackLayout>

                    </Frame>

                </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>